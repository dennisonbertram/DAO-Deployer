{
  "name": "dao-deployer-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for deploying DAO factories and DAOs to any network with transaction preparation support",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "anvil:start": "anvil --port 8545 --accounts 10 --balance 10000 --gas-limit 30000000",
    "anvil:stop": "pkill -f anvil || true"
  },
  "keywords": [
    "mcp",
    "dao",
    "ethereum",
    "blockchain",
    "deployment",
    "transaction-preparation"
  ],
  "author": "DAO Deployer MCP",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.0",
    "viem": "^2.21.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "fast-check": "^3.15.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
